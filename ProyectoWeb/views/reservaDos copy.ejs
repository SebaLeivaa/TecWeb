    <dialog id="reservaDosDialog" class="h-2/3 border-2 border-solid border-border w-2/3 p-4 3xl:w-2/3 3xl:h-3/4 max-lg:w-4/5">
        <div class="flex flex-col">
            <div class="flex justify-end">
                <button id="cerrarReservaDos">
                    <i class="fa-solid fa-x"></i>
                </button>
            </div>
            <div>
                <h1 class="text-center text-3xl">Reserva tu hora</h1>
            </div>
        </div>
        <div class="flex flex-row max-md:flex-col">
            <div class="flex flex-col mt-9 space-y-24 w-3/5 max-md:flex-col">
                <% let actualProf = null; %>
                <% let timestamp = resultados.rows[0].cita_dis_fecha; %>
                <% let fechaConsultada = new Date(timestamp); %>
                <% let dia = fechaConsultada.getDate(); %>
                <% let mes = fechaConsultada.getMonth() + 1; %>
                <% let anio = fechaConsultada.getFullYear(); %>

                <% if (dia < 10) { dia = '0' + dia; }
                if (mes < 10) { mes = '0' + mes; } %>

                <% let fechaFormateada = `${anio}/${mes}/${dia}`; %>
                <% resultados.rows.forEach(resultado => { %>
                    <% let timestamp2 = resultado.cita_dis_fecha; %>
                    <% let fechaConsultada2 = new Date(timestamp2); %>
                    <% let dia2 = fechaConsultada2.getDate(); %>
                    <% let mes2 = fechaConsultada2.getMonth() + 1; %>
                    <% let anio2 = fechaConsultada2.getFullYear(); %>
                    <% if (dia2 < 10) { dia2 = '0' + dia2; }
                    if (mes2 < 10) { mes2 = '0' + mes2; } %>
                    <% let fechaFormateada2 = `${anio2}/${mes2}/${dia2}`; %>
                    <% if (resultado.prof_rut !== actualProf && fechaFormateada2 === fechaFormateada) { %>
                        <!-- Nuevo especialista, crea un nuevo div -->
                        <% actualProf = resultado.prof_rut; %>  
                        <div class="">
                            <div class="ml-20 text-xl">
                                <% const diasSemana = ["Domingo", "Lunes", "Martes", "Miércoles", "Jueves", "Viernes", "Sábado"]; %>
                                <% const meses = ["Enero", "Febrero", "Marzo", "Abril", "Mayo", "Junio", "Julio", "Agosto", "Septiembre", "Octubre", "Noviembre", "Diciembre"]; %>
                                <% const dia = resultado.cita_dis_fecha; %>
                                <% const mes = resultado.cita_dis_fecha; %>
                                <h1><%= diasSemana[dia.getDay()]%> <%= resultado.cita_dis_fecha.getDate()%> de <%= meses[mes.getMonth()]%> <%= resultado.cita_dis_fecha.getFullYear()%></h1>
                            </div>
                            <div class="flex flex-row mt-10">
                                <div class="flex flex-row w-full">
                                    <div class="h-full w-1/3 flex justify-center">
                                        <img class="" src="../img/default.png" alt="Juan Rodriguez">
                                    </div>
                                    <div class="flex flex-col w-96 3xl:ml-6">
                                        <h1 class="text-xl"><%= resultado.prof_nombres %> <%= resultado.prof_apellidos %></h1>
                                        <h1 class="text-xl mt-4"><%=resultado.espe_nombre%></h1>
                                        <div class="grid grid-cols-3 mt-10 gap-10 w-full">
                                            <% let actualDia = resultado.cita_dis_fecha.getDate(); %>
                                            <% let actualMes = resultado.cita_dis_fecha.getMonth(); %>
                                            <% resultados.rows.forEach(hora => { %>
                                                <% if(actualProf === hora.prof_rut && hora.cita_dis_fecha.getMonth() === actualMes && hora.cita_dis_fecha.getDate() === actualDia) {%>
                                                <form id="seleccionar-hora" action="/seleccionarHora" method="post" >
                                                    <input type="text" value="<%=hora.prof_rut%>" class="w-0 h-0 none invisible" name="selectProf">
