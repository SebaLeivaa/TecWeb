<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Clinica</title>
    <link rel="stylesheet" href="output.css">
    <script src="https://cdn.tailwindcss.com?plugins=forms,typography,aspect-ratio,line-clamp"></script>    
    <script src="https://kit.fontawesome.com/8caa7c21dc.js" crossorigin="anonymous"></script>
</head>
<body class="bg-secondary">
    <header class="bg-blue-900 fixed z-20 top-0 left-0 right-0">
        <nav class="grid grid-cols-3 h-full max-xl:grid-cols-2 gap-y-1">
            <img class="h-20 rounded-md w-64 mx-auto my-1 max-xl:w-max max-xl:m-2 max-sm:h-16" src="./img/logoClinica.png">
                        <div class="flex flex-row gap-10 items-end mb-1 text-text max-xl:col-start-1 max-xl:col-end-3 text-center m-auto max-sm:gap-4">
                <a class="hover:text-primary" href="#"> <b><ins>Inicio<ins/></b> </a> 
            </div>
            <div class="flex items-end gap-x-10 justify-end mr-2 text-text mb-1 max-xl:col-start-2 max-xl:col-end-4 max-xl:row-start-1 max-xl:row-end-2 max-md:w-full max-xl:justify-end max-sm:pr-2">
                <% if (user && user.prof_nombres && user.prof_apellidos) { %>
                    <button class="hover:text-primary" onclick="loginButton();" disabled>
                      <i class="fa-solid fa-user"></i> <%= user.prof_nombres.toUpperCase() %> <%= user.prof_apellidos.toUpperCase() %>
                    </button>
                    <button class="bg-secondary w-40 rounded-md p-1.5 hover:bg-primary" onclick="logout();">Cerrar sesión</button>
                <% } %>
            </div>
        </nav>
    </header>
    <main class="gap-10">
        <section class="h-screen flex flex-col justify-center items-center">
            <div class="h-20 mb-20">
                <h1 class="text-text text-4xl"><b>SISTEMA CLINICA ULAGOS</b></h1>
            </div>
            <div class="grid grid-cols-2 gap-20 max-sm:gap-2 max-md:gap-8 max-sm:grid-cols-1 max-sm:m-auto">
                <form class="border-2 border-border rounded-3xl bg-primary text-text w-96 ml-auto hover:bg-text hover:text-primary max-sm:w-80 max-md:w-72 max-sm:h-[14.25rem] max-xl:h-[19.25rem]" action="/administrarHoraProfesional" method="post">
                    <button class="flex flex-col justify-center rounded-3xl items-center h-full w-full">
                        <figure class="w-60 h-56 flex flex-col justify-center max-sm:h-36">
                            <i class="fa-solid fa-clock text-9xl p-14 max-sm:text-8xl max-sm:p-8"></i>
                            <figcaption class="h-20 flex">
                                <div class="mt-1">
                                    <p class="text-3xl">Administrar horas</p>
                                </div>
                            </figcaption>
                        </figure>
                    </button>
                </form>
                <button class="flex flex-col justify-center items-center border-2 border-border rounded-3xl bg-primary text-text w-96 hover:bg-text hover:text-primary max-sm:w-80 max-md:w-72" onclick="historialMedProf();">
                    <figure class="w-60 h-56 flex justify-center max-sm:h-36">
                        <i class="fa-solid fa-notes-medical text-9xl p-14 max-sm:text-8xl max-sm:p-8"></i>
                    </figure>
                    <figcaption class="h-20 flex">
                        <div class="mt-1">
                            <p class="text-3xl">Historial médico pacientes</p>
                        </div>
                    </figcaption>
                </button>
            </div>
        </section>
        <dialog id="historialMedProfesionalesDialog" class="h-[31.5rem] border-2 border-solid border-border bg-blue-100 w-96 p-4">
            <div class="grid">
                <button class="ml-[95%] w-min" onclick="closeDialogHistorialMedProf();">
                    <i class="fa-solid fa-x"></i>
                </button>
                <h1 class="m-auto text-xl">Historial médico pacientes</h1>
            </div>
            <div class="flex flex-col h-[80%]">
                <form action="/historialMedConsultaProfesionales" method="post" class="gap-10 grid p-2 h-full">
                    <div class="mt-10">
                        <label for="rut">Rut paciente</label>
                        <input id="rutHistorialMedProf" name="rut" type="text" class="m-auto w-full border-border rounded-md border-2" placeholder="Ingrese el rut del paciente" required>
                        <% if(error === 'Este rut no es valido') {%>
                            <p id="errorMensajeRutHistorialMedProf" class="text-red-600 text-sm font-semibold">Este rut no es valido</p>
                        <% } else if(error === 'Este rut no esta registrado en nuestra base de datos'){%>
                            <p id="errorMensajeRutHistorialMedProf" class="text-red-600 text-sm font-semibold">Este rut no esta registrado en nuestra base de datos</p>
                        <%}%>
                    </div>
                    <div class="text-center bg-blue-500 object-cover w-1/2 m-auto rounded-md mt-20">
                        <button type="submit" class="text-text rounded-md p-1.5 hover:bg-blue-600 w-full m-auto">Consultar</button>
                    </div>
                </form>
            </div>
        </dialog>
    <script src="script.js"></script>
    <script src="database.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
          const historialMedProfesionalesDialog = document.getElementById('historialMedProfesionalesDialog');
          historialMedProfesionalesDialog.showModal();
        });    
    </script>
</body>
</html>