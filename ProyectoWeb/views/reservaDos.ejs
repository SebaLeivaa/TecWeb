    <dialog id="reservaDosDialog" class="h-2/3 border-2 border-solid border-border w-2/3 p-4 xl:w-2/3 xl:h-3/4">
        <div class="flex flex-col">
            <div class="flex justify-end">
                <button onclick="closeDia();">
                    <i class="fa-solid fa-x"></i>
                </button>
            </div>
            <div>
                <h1 class="text-center text-3xl">Reserva tu hora</h1>
            </div>
        </div>
        <div class="flex flex-row">
            <div class="flex flex-col mt-9 space-y-24 w-3/5">
                <% let actualProf = null; %>
                <% let timestamp = resultados.rows[0].cita_dis_fecha; %>
                <% let fechaConsultada = new Date(timestamp); %>
                <% let dia = fechaConsultada.getDate(); %>
                <% let mes = fechaConsultada.getMonth() + 1; %>
                <% let anio = fechaConsultada.getFullYear(); %>

                <% if (dia < 10) { dia = '0' + dia; }
                if (mes < 10) { mes = '0' + mes; } %>

                <% let fechaFormateada = `${anio}/${mes}/${dia}`; %>
                <% resultados.rows.forEach(resultado => { %>
                    <% let timestamp2 = resultado.cita_dis_fecha; %>
                    <% let fechaConsultada2 = new Date(timestamp2); %>
                    <% let dia2 = fechaConsultada2.getDate(); %>
                    <% let mes2 = fechaConsultada2.getMonth() + 1; %>
                    <% let anio2 = fechaConsultada2.getFullYear(); %>
                    <% if (dia2 < 10) { dia2 = '0' + dia2; }
                    if (mes2 < 10) { mes2 = '0' + mes2; } %>
                    <% let fechaFormateada2 = `${anio2}/${mes2}/${dia2}`; %>
                    <% if (resultado.prof_rut !== actualProf && fechaFormateada2 === fechaFormateada) { %>
                        <!-- Nuevo especialista, crea un nuevo div -->
                        <% actualProf = resultado.prof_rut; %>  
                        <div class="">
                            <div class="ml-20 text-xl">
                                <% const diasSemana = ["Domingo", "Lunes", "Martes", "Miércoles", "Jueves", "Viernes", "Sábado"]; %>
                                <% const meses = ["Enero", "Febrero", "Marzo", "Abril", "Mayo", "Junio", "Julio", "Agosto", "Septiembre", "Octubre", "Noviembre", "Diciembre"]; %>
                                <% const dia = resultado.cita_dis_fecha; %>
                                <% const mes = resultado.cita_dis_fecha; %>
                                <h1><%= diasSemana[dia.getDay()]%> <%= resultado.cita_dis_fecha.getDate()%> de <%= meses[mes.getMonth()]%> <%= resultado.cita_dis_fecha.getFullYear()%></h1>
                            </div>
                            <div class="flex flex-row mt-10">
                                <div class="flex flex-row w-full">
                                    <div class="h-full w-1/3 flex justify-center">
                                        <img class="" src="../img/default.png" alt="Juan Rodriguez">
                                    </div>
                                    <div class="flex flex-col w-96 xl:ml-6">
                                        <h1 class="text-xl"><%= resultado.prof_nombres %> <%= resultado.prof_apellidos %></h1>
                                        <h1 class="text-xl mt-4"><%=resultado.espe_nombre%></h1>
                                        <div class="grid grid-cols-3 mt-10 gap-10 w-full">
                                            <% let actualDia = resultado.cita_dis_fecha.getDate(); %>
                                            <% let actualMes = resultado.cita_dis_fecha.getMonth(); %>
                                            <% resultados.rows.forEach(hora => { %>
                                                <% if(actualProf === hora.prof_rut && hora.cita_dis_fecha.getMonth() === actualMes && hora.cita_dis_fecha.getDate() === actualDia) {%>
                                                <form id="seleccionar-hora" action="/seleccionarHora" method="post">
                                                    <input type="text" value="<%=hora.prof_rut%>" class="w-0 h-0 none invisible" name="selectProf">
                                                    <button type="submit" class="text-text rounded-md p-1.5 bg-blue-500 hover:bg-blue-600 w-full m-auto"  name="selectHour" value="<%=hora.cita_dis_fecha.getFullYear()%>-<%=(hora.cita_dis_fecha.getMonth()+1).toString().padStart(2, '0')%>-<%=hora.cita_dis_fecha.getDate().toString().padStart(2, '0')%> <%=hora.cita_dis_fecha.getHours().toString().padStart(2, '0')%>:<%=hora.cita_dis_fecha.getMinutes().toString().padStart(2, '0')%>:<%=hora.cita_dis_fecha.getSeconds().toString().padStart(2, '0')%>">
                                                        <% actualMes = resultado.cita_dis_fecha.getMonth(); %>
                                                        <% actualDia = resultado.cita_dis_fecha.getDate(); %>
                                                        <%=hora.cita_dis_fecha.getHours().toString().padStart(2, '0') %>:<%= hora.cita_dis_fecha.getMinutes().toString().padStart(2, '0') %>
                                                    </button>
                                                </form>
                                                <% };%>
                                            <% });%>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% } %>
                <% }); %>
            </div>
            <div class="w-1/5 flex justify-start flex-col fixed top-56 right-1/4 bottom-0 xl:top-24 xl:h-full">
                <div class="h-2/5 grid m-20 bg-blue-500 w-full border-solid rounded-xl text-text mt-36">
                    <div class="flex flex-row justify-center h-20 gap-x-10">
                            <button id="prev-month" class="w-1/6">
                                <i class="fa-solid fa-arrow-left"></i>
                                </button>
                            <p class="text-xl mt-6 w-2/3 text-center" id="month-year"></p>
                            <button id="next-month" class="w-1/6">
                                <i class="fa-solid fa-arrow-right"></i>
                            </button>
                    </div>
                    <div class="flex flex-col h-full mb-52">
                        <div class="grid grid-cols-7 text-s ml-4">
                            <span>Lun</span>
                            <span>Mar</span>
                            <span>Mie</span>
                            <span>Jue</span>
                            <span>Vie</span>
                            <span>Sab</span>
                            <span>Dom</span>
                        </div>
                        <form id="div-calendar" action="/actualizarFechas" method="post" class="grid grid-cols-7 text-s mt-4 ml-4">
                        </form>
                        <div class="text-blue-800 invisible" id="horas-disponibles">
                            <% let horasDisponiblesSet = new Set() %>
                            <% resultados.rows.forEach(horas => { %>
                                <% let fechasDisponibles = new Date(horas.cita_dis_fecha); %>
                                <% let diaDisponible = fechasDisponibles.getDate(); %>
                                <% let mesDisponible = fechasDisponibles.getMonth() + 1; %>
                                <% let anioDisponible = fechasDisponibles.getFullYear(); %>


                                <% let horasCitasMedicas = `${anioDisponible}-${mesDisponible}-${diaDisponible}`; %>
                                <% horasDisponiblesSet.add(horasCitasMedicas); %>
                                <% let horasDisponibles = Array.from(horasDisponiblesSet) %>
                            <%}); %>
                            <% let horasDisponibles = Array.from(horasDisponiblesSet) %>
                            <%=horasDisponibles%>
                        </div>
                    </div>
                </div>
                <div class="flex justify-center flex-row text-center -mt-16 gap-2 w-full xl:ml-12">
                    <i class="fa-solid fa-circle text-blue-800 mt-1.5"></i>
                    <h1 class="font-bold">Dias con horas disponibles</h1>
                </div>
            </div>
        </div>    
    </dialog>   
    <script src="script.js"></script>
    <script src="database.js"></script>
    <script src="calendario.js"></script>
</body>
